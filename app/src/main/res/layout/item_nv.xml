<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewmaso"
        android:text="Mã : 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewten"
        android:layout_below="@id/textviewmaso"
        android:text="Tên: Thái Minh Khoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewhsluong"
        android:layout_below="@id/textviewten"
        android:text="HSLuong : 3.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>